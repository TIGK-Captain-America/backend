<head>
    <script>
        document.addEventListener("DOMContentLoaded", function(){
            //Selects the canvas element in the view
            let cx = document.querySelector("canvas").getContext("2d")

            //Storing the fetched data into local variable
            var dp = {{{drivingPath}}}

            //Initialzing the canvas element
            cx.beginPath()
            cx.strokeStyle = "blue"
            cx.moveTo(500, 500)
            cx.fill()

            //Drawing the lines between the nodes on the canvas element
            dp.path.forEach(node =>{
                let x = 5*node.positions.x
                let y = 5*node.positions.y
                cx.lineTo(x+500,y+500)
            })
            cx.stroke()
            cx.closePath()

            //Drawing circles on the node positions on the canvas element
            dp.path.forEach(node =>{
                let x = 5*node.positions.x
                let y = 5*node.positions.y
                let collision = node.collision
                cx.beginPath()
                cx.arc(x+500, y+500, 4, 2*Math.PI, false)
                cx.fillStyle = collision ? 'red' : 'green'
                cx.fill()
                cx.closePath()
            })
        })
    </script>
</head>
<canvas width="1000" height="1000" style="border:1px solid #000">

</canvas>